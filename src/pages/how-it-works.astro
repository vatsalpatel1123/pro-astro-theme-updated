---
// src/pages/how-it-works.astro
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="How It Works - Long Island Home Buyers">
    <!-- Navigation -->
    <Navigation />
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 via-white to-slate-50 py-20 lg:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <span class="inline-block px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-6">
          Our Process
        </span>
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-slate-900 mb-6 leading-tight">
          A Simple, Transparent <span class="text-blue-600">3-Step Process</span>
        </h1>
        <p class="text-lg lg:text-xl text-slate-600 mb-10 leading-relaxed">
          Selling your home shouldn't be complicated. We've streamlined the process to get you a fair offer quickly—with no hidden fees, no repairs, and no hassle.
        </p>
        <a 
          href="#steps" 
          class="inline-flex items-center px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl"
        >
          See How It Works
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Steps Section -->
  <section id="steps" class="py-20 lg:py-28 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Step 1 -->
      <div class="mb-16 lg:mb-24">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="order-2 lg:order-1">
            <div class="flex items-start space-x-4 mb-6">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center">
                  <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                </div>
              </div>
              <div>
                <span class="text-sm font-bold text-blue-600 uppercase tracking-wide">Step 1</span>
                <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mt-2 mb-4">
                  Submit Your Info
                </h2>
              </div>
            </div>
            <p class="text-lg text-slate-600 leading-relaxed mb-6">
              Fill out our simple online form with basic details about your property and situation. It takes less than 2 minutes, and there's absolutely no obligation.
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">Quick and easy form—no lengthy paperwork</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">100% confidential and secure</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">No commitment required</span>
              </li>
            </ul>
          </div>
          <div class="order-1 lg:order-2">
            <div class="bg-gradient-to-br from-blue-50 to-slate-50 rounded-3xl p-8 lg:p-12 shadow-xl border border-slate-100">
              <div class="bg-white rounded-2xl p-8 shadow-lg">
                <div class="space-y-4">
                  <div class="flex items-center space-x-3">
                    <div class="w-3 h-3 bg-blue-600 rounded-full"></div>
                    <div class="h-4 bg-slate-200 rounded w-3/4"></div>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-3 h-3 bg-blue-600 rounded-full"></div>
                    <div class="h-4 bg-slate-200 rounded w-2/3"></div>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-3 h-3 bg-blue-600 rounded-full"></div>
                    <div class="h-4 bg-slate-200 rounded w-5/6"></div>
                  </div>
                  <div class="pt-6">
                    <div class="h-12 bg-blue-600 rounded-lg flex items-center justify-center">
                      <span class="text-white font-semibold">Submit Property Info</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Step 2 -->
      <div class="mb-16 lg:mb-24">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="bg-gradient-to-br from-slate-50 to-blue-50 rounded-3xl p-8 lg:p-12 shadow-xl border border-slate-100">
              <div class="bg-white rounded-2xl p-8 shadow-lg">
                <div class="flex items-center justify-center mb-6">
                  <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center">
                    <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                </div>
                <div class="text-center">
                  <div class="inline-block px-4 py-2 bg-blue-50 text-blue-700 rounded-full text-sm font-semibold mb-4">
                    ~5 Minutes
                  </div>
                  <div class="space-y-2">
                    <div class="h-2 bg-slate-100 rounded w-full"></div>
                    <div class="h-2 bg-slate-100 rounded w-5/6 mx-auto"></div>
                    <div class="h-2 bg-slate-100 rounded w-4/6 mx-auto"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div>
            <div class="flex items-start space-x-4 mb-6">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center">
                  <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
              </div>
              <div>
                <span class="text-sm font-bold text-blue-600 uppercase tracking-wide">Step 2</span>
                <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mt-2 mb-4">
                  Quick 5-Minute Call
                </h2>
              </div>
            </div>
            <p class="text-lg text-slate-600 leading-relaxed mb-6">
              One of our local Manhasset team members will give you a quick call to confirm the details and better understand your situation. No pressure, no sales pitch—just a friendly conversation.
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">Speak directly with a local expert</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">Flexible scheduling—we work around you</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">Completely private and discreet</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Step 3 -->
      <div class="mb-16">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="order-2 lg:order-1">
            <div class="flex items-start space-x-4 mb-6">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center">
                  <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
              </div>
              <div>
                <span class="text-sm font-bold text-blue-600 uppercase tracking-wide">Step 3</span>
                <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mt-2 mb-4">
                  Get Your Offer
                </h2>
              </div>
            </div>
            <p class="text-lg text-slate-600 leading-relaxed mb-6">
              Within 24 hours, you'll receive a fair, no-obligation cash offer for your home. Take your time to review it—there's zero pressure to accept. If it works for you, we can close in as little as 7 days.
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">Fair market value offer—no lowball tactics</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">No hidden fees or commissions</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">Close on your timeline—fast or flexible</span>
              </li>
            </ul>
          </div>
          <div class="order-1 lg:order-2">
            <div class="bg-gradient-to-br from-blue-50 to-slate-50 rounded-3xl p-8 lg:p-12 shadow-xl border border-slate-100">
              <div class="bg-white rounded-2xl p-8 shadow-lg">
                <div class="border-2 border-blue-200 rounded-xl p-6">
                  <div class="flex items-center justify-between mb-4">
                    <span class="text-sm font-semibold text-slate-600">Cash Offer</span>
                    <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-bold">READY</span>
                  </div>
                  <div class="text-4xl font-bold text-slate-900 mb-2">$XXX,XXX</div>
                  <div class="text-sm text-slate-500 mb-6">Fair market value • No fees</div>
                  <div class="space-y-3">
                    <div class="flex justify-between text-sm">
                      <span class="text-slate-600">Closing timeline:</span>
                      <span class="font-semibold text-slate-900">7-30 days</span>
                    </div>
                    <div class="flex justify-between text-sm">
                      <span class="text-slate-600">Repairs needed:</span>
                      <span class="font-semibold text-slate-900">None</span>
                    </div>
                    <div class="flex justify-between text-sm">
                      <span class="text-slate-600">Commission:</span>
                      <span class="font-semibold text-slate-900">$0</span>
                    </div>
                  </div>
                  <div class="mt-6 pt-6 border-t border-slate-200">
                    <div class="h-10 bg-blue-600 rounded-lg flex items-center justify-center">
                      <span class="text-white font-semibold text-sm">Accept Offer</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Closing Statement -->
      <div class="text-center max-w-3xl mx-auto pt-8">
        <div class="bg-gradient-to-r from-blue-50 to-slate-50 rounded-2xl p-8 lg:p-12 border border-blue-100">
          <svg class="w-16 h-16 text-blue-600 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h3 class="text-2xl lg:text-3xl font-bold text-slate-900 mb-4">
            We Handle Everything
          </h3>
          <p class="text-lg text-slate-600">
            So you can move forward with ease. No showings, no repairs, no waiting. Just a simple, straightforward process from start to finish.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Section -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4">
          Why Choose Long Island Home Buyers?
        </h2>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          We're a local Manhasset company that puts your needs first
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Card 1 -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-slate-100">
          <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-3">Lightning Fast</h3>
          <p class="text-slate-600 leading-relaxed">
            Get your offer in 24 hours and close in as little as 7 days. We move at your pace.
          </p>
        </div>

        <!-- Card 2 -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-slate-100">
          <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-3">As-Is Purchase</h3>
          <p class="text-slate-600 leading-relaxed">
            No repairs, no cleaning, no staging. We buy homes in any condition—even if they need major work.
          </p>
        </div>

        <!-- Card 3 -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-slate-100">
          <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-3">100% Transparent</h3>
          <p class="text-slate-600 leading-relaxed">
            No hidden fees, no commissions, no surprises. What we offer is what you get—guaranteed.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="py-20 lg:py-28 bg-gradient-to-br from-blue-600 to-blue-700">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-5xl font-bold text-white mb-6">
        Ready to Get Your Offer?
      </h2>
      <p class="text-xl text-blue-100 mb-10 leading-relaxed">
        Start the process today and receive your no-obligation cash offer within 24 hours.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="/contact" 
          class="inline-flex items-center px-10 py-5 bg-white hover:bg-slate-50 text-blue-600 font-bold rounded-lg transition-all duration-200 shadow-xl hover:shadow-2xl text-lg"
        >
          Get My Offer Now
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
        <a 
          href="tel:+1234567890" 
          class="inline-flex items-center px-10 py-5 bg-blue-700 hover:bg-blue-800 text-white font-semibold rounded-lg transition-all duration-200 border-2 border-blue-500 text-lg"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call Us Now
        </a>
      </div>
      <p class="text-blue-200 mt-8 text-sm">
        No obligation • No pressure • 100% confidential
      </p>
    </div>
  </section>
<!-- Footer -->
    <Footer />

    <!-- Scroll to Top Button -->
    <button id="scrollToTop" 
            class="fixed bottom-8 right-8 bg-blue-600 text-white w-12 h-12 rounded-full shadow-lg hover:bg-blue-700 transition opacity-0 pointer-events-none"
            onclick="window.scrollTo({top: 0, behavior: 'smooth'})">
        <svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
        </svg>
    </button>

    <script is:inline>
        // Scroll to top button visibility
        const scrollBtn = document.getElementById('scrollToTop');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                scrollBtn.classList.remove('opacity-0', 'pointer-events-none');
                scrollBtn.classList.add('opacity-100');
            } else {
                scrollBtn.classList.add('opacity-0', 'pointer-events-none');
                scrollBtn.classList.remove('opacity-100');
            }
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
</body>
</html>
</Layout>

<style>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Custom animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hover effects */
