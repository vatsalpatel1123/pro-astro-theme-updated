    {
      "@context": "https://schema.org",
      "@type": "RealEstateAgent",
      "name": "Long Island Home Buyers",
      "description": "Cash home buyers serving all of Long Island",
      "url": "https://longislandhomebuyers.com/locations",
      "telephone": "+1-718-288-7300",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Manhasset",
        "addressRegion": "NY",
        "addressCountry": "US"
      },
      "areaServed": [
        {
          "@type": "State",
          "name": "New York",
          "containsPlace": [
            {"@type": "AdministrativeArea", "name": "Nassau County"},
            {"@type": "AdministrativeArea", "name": "Suffolk County"},
            {"@type": "Borough", "name": "Brooklyn"},
            {"@type": "Borough", "name": "Queens"}
