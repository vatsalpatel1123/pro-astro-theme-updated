<style>
  .dropdown {
    position: relative;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    min-width: 200px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border-radius: 0.5rem;
    padding: 0.5rem 0;
    margin-top: 0.5rem;
    z-index: 100;
  }

  .dropdown-menu.block {
    display: block;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.75rem 1.5rem;
    color: #475569;
    transition: all 0.2s;
    font-size: 0.875rem;
  }

  .dropdown-menu a:hover {
    background: #eff6ff;
    color: #2563eb;
  }

  /* Three-column layout for Locations dropdown - only on desktop */
  @media (min-width: 768px) {
    .dropdown-menu.locations {
      display: none;
      grid-template-columns: repeat(3, 1fr);
      gap: 0;
      min-width: 650px;
      max-width: 700px;
      padding: 1rem 0;
      left: 50%;
      transform: translateX(-50%);
    }

    .dropdown-menu.locations.block {
      display: grid;
    }

    .dropdown-menu.locations a {
      padding: 0.6rem 1.25rem;
      white-space: nowrap;
      font-size: 0.875rem;
    }

    /* Desktop hover */
    .dropdown:hover .dropdown-menu:not(.locations) {
      display: block;
    }
    
    .dropdown:hover .dropdown-menu.locations {
      display: grid;
    }
  }

  /* Mobile menu */
  .mobile-menu {
    display: none;
  }

  .mobile-menu.show {
    display: block;
  }

  @media (min-width: 768px) {
    .mobile-menu {
      display: none !important;
    }
  }

  /* Mobile dropdown styling */
  @media (max-width: 767px) {
    .dropdown-menu {
      position: static;
      box-shadow: none;
      padding-left: 1rem;
      margin-top: 0.5rem;
      background: #f8fafc;
      border-radius: 0.5rem;
    }

    .dropdown-menu.locations {
      max-height: 300px;
      overflow-y: auto;
    }

    .dropdown-menu.locations a {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }
  }

  /* Dropdown arrow animation */
  .dropdown-arrow {
    transition: transform 0.2s;
  }

  .dropdown.active .dropdown-arrow {
    transform: rotate(180deg);
  }
</style>

